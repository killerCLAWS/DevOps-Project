pipeline {
  agent any
  stages {
    stage('Build') {
      steps {
        script {
          docker.build("my-app:${env.BUILD_NUMBER}")
        }
      }
    }
    stage('Push') {
      steps {
        script {
          docker.withRegistry('https://my-registry', 'credentials-id') {
            docker.image("my-app:${env.BUILD_NUMBER}").push()
          }
        }
      }
    }
  }
}
